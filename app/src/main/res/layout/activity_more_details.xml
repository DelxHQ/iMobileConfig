<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
    android:layout_width="match_parent">

	<LinearLayout 
		android:layout_height="wrap_content"
        android:layout_width="match_parent"
		android:orientation="vertical"
		android:minHeight="1000dp">

		<android.support.v7.widget.CardView
			android:layout_height="wrap_content"
			android:layout_width="match_parent" 
			app:cardElevation="5dp">

			<RelativeLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:padding="28dp">

				<TextView
					android:id="@+id/payloadRemovalTitleTextView"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:paddingBottom="10dp"
					android:text="Removable"
					android:textColor="#3388ED"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/payloadRemovalTextView"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_below="@+id/payloadRemovalTitleTextView"
					android:paddingBottom="15dp"
					android:textSize="17sp" />

				<TextView
					android:id="@+id/payloadUUIDTitleTextView"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_below="@+id/payloadRemovalTextView"
					android:paddingBottom="10dp"
					android:text="UUID"
					android:textColor="#3388ED"
					android:textSize="15sp" />

				<TextView
					android:id="@+id/payloadUUIDTextView"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_below="@+id/payloadUUIDTitleTextView"
					android:textSize="17sp" />
			</RelativeLayout>
		</android.support.v7.widget.CardView>
	</LinearLayout>
</RelativeLayout>
